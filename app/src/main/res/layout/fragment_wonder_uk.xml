                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/wonder_uk"
                android:contentDescription="@string/wonder_usa_desc" />

            <!-- ðŸ“„ ThÃ´ng tin mÃ´ táº£ -->
